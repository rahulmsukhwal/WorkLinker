rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user data (returns null if doesn't exist)
    function getUserData(userId) {
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc != null ? userDoc.data : null;
    }
    
    // Helper function to check if user is admin
    function isAdmin(userId) {
      let userData = getUserData(userId);
      return userData != null && userData.globalRole == 'admin';
    }
    
    // Helper function to check if user exists
    function userExists(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }
    
    // Helper function to check if user is project member
    // Note: This is a simplified check. In production, you may need to query projectMembers collection
    function isProjectMember(projectId, userId) {
      // Check if user is in the group
      let groupData = get(/databases/$(database)/documents/groups/$(projectId)).data;
      return userId in groupData.memberIds;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to query users collection (for phone lookup during login)
      // Also allow unauthenticated queries for initial phone lookup
      allow list: if true; // Allow all queries for phone lookup
      
      // Allow users to create their own user document (for first-time registration)
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own document (phone, etc.)
      allow update: if request.auth != null && 
        (request.auth.uid == userId || isAdmin(request.auth.uid));
      
      // Only admins can delete users
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Projects collection
    match /projects/{projectId} {
      // Users can read projects they are members of
      allow read: if request.auth != null && 
        (isProjectMember(projectId, request.auth.uid) || isAdmin(request.auth.uid));
      
      // Only admins and managers can create projects
      // Also allow if user document doesn't exist yet (first user scenario)
      allow create: if request.auth != null && 
        (!userExists(request.auth.uid) || 
         isAdmin(request.auth.uid) || 
         (getUserData(request.auth.uid) != null && getUserData(request.auth.uid).globalRole == 'manager'));
      
      // Only admins can update/delete projects
      allow update, delete: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Project members collection
    match /projectMembers/{memberId} {
      // Users can read members of projects they belong to
      allow read: if request.auth != null && 
        (isProjectMember(resource.data.projectId, request.auth.uid) || 
         isAdmin(request.auth.uid));
      
      // Admins and managers can add members
      allow create: if request.auth != null && 
        (isAdmin(request.auth.uid) || 
         (getUserData(request.auth.uid) != null && 
          getUserData(request.auth.uid).globalRole == 'manager' && 
          request.resource.data.projectRole == 'developer'));
      
      // Admins can remove any member, managers can remove developers
      allow delete: if request.auth != null && 
        (isAdmin(request.auth.uid) || 
         (getUserData(request.auth.uid) != null && 
          getUserData(request.auth.uid).globalRole == 'manager' && 
          resource.data.projectRole == 'developer'));
    }
    
    // Groups collection
    match /groups/{projectId} {
      // Project members can read group data
      allow read: if request.auth != null && 
        (isProjectMember(projectId, request.auth.uid) || isAdmin(request.auth.uid));
      
      // Only admins and managers can update groups
      allow write: if request.auth != null && 
        (isAdmin(request.auth.uid) || 
         (getUserData(request.auth.uid) != null && getUserData(request.auth.uid).globalRole == 'manager'));
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Project members can read messages
      allow read: if request.auth != null && 
        (isProjectMember(resource.data.projectId, request.auth.uid) || 
         isAdmin(request.auth.uid));
      
      // Project members can create messages
      allow create: if request.auth != null && 
        (isProjectMember(request.resource.data.projectId, request.auth.uid) || 
         isAdmin(request.auth.uid));
      
      // Users can update their own messages (for read receipts)
      allow update: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || 
         isProjectMember(resource.data.projectId, request.auth.uid));
    }
  }
}

